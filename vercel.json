{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "out"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/post/:slug",
      "destination": "/posts/:slug.html"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/about",
      "destination": "/about/index.html"
    }
  ]
}