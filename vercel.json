{
  "buildCommand": "hugo --minify --baseURL=https://$VERCEL_URL/",
  "outputDirectory": "public",
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/posts/(.*)",
      "dest": "/posts/$1"
    },
    {
      "src": "/tags/(.*)",
      "dest": "/tags/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}